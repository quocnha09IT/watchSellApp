<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_product"
    android:orientation="vertical">
<Toolbar
    android:id="@+id/toolbar"
    android:background="#E3A13F"
    android:titleTextColor="@android:color/background_dark"
    android:title="DETAIL PRODUCT"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

</Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_margin="10dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
              android:layout_marginLeft="10dp"
                android:textStyle="bold"

                android:text="TextView"
                 />

            <TextView
                android:id="@+id/price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#F40F0F"

                android:text="TextView"
                />

            <Spinner
                android:id="@+id/spinner"

                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_margin="3dp"
                android:background="@drawable/spinner"

                android:padding="5dp">

            </Spinner>

            <Button
                android:id="@+id/addcart"
                android:backgroundTint="#75B7BF"
                android:textColor="#F1190A"
                android:text="add cart"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/muatiep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua tiep" />

        <TextView
            android:textStyle="bold"
            android:textColor="#DD400F"
            android:layout_margin="10dp"
            android:text="Status"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            />
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>
